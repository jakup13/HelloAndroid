<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.jakub.helloandroid.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marg_bot" >
        <ImageView
            android:id="@+id/imageViewworkspace800"
            android:layout_width="wrap_content"
            android:layout_height="345dp"
            android:contentDescription="@null"
            android:src="@drawable/workspace800" />
        <ImageView
            android:id="@+id/imageViewudacitylogo800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewworkspace800"
            android:autoLink="web"
            android:contentDescription="@null"
            android:src="@drawable/udacitylogo800" />
        <TextView
            android:id="@+id/street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/phone"
            android:layout_below="@id/imageViewudacitylogo800"
            android:layout_centerHorizontal="true"
            android:text="@string/street"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/street"
            android:layout_centerHorizontal="true"
            android:text="@string/city"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_centerHorizontal="true"
            android:text="@string/phone"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/marg_bot"
            android:layout_marginTop="11dp"
            android:onClick="openWebsite"
            android:text="@string/website"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</ScrollView>